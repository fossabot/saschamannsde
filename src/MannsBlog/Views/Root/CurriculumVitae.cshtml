
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@inject MannsBlog.Services.DataProviders.PublicationsProvider _publications
@inject MannsBlog.Services.DataProviders.JobsProvider _jobs
@inject MannsBlog.Services.DataProviders.CertsProvider _certs
@inject MannsBlog.Services.DataProviders.TestimonialsProvider _testimonials
@inject MannsBlog.Services.DataProviders.ProjectsProvider _projects
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Sascha Manns's Twilight Zone";
    Layout = "_LayoutCV";
    int age = DateTime.Now.Year - 1979;
    int experience = DateTime.Now.Year - 2001;

}
<!--=========welcome_area=========-->
<div id="pagepiling">

    <!-- Masthead -->
    <section id="home" class="navbar-is-white text-white pp-scrollable d-flex align-items-center section position-absolute" style="background-image:url('img/cv/bg/personal33.jpg');" role="main">
        <div class="intro">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-5">
                        <h1 class="text-white"><span class="text-primary">Sascha</span> Manns.</h1>
                        <p class="lead mt-4 mb-5">@_localizer["masterhead-lead"].</p>
                        <!--<button type="button" class="btn" data-toggle="modal" data-target="#send-request">Let's talk</button>-->
                        <a class="btn" href="mailto:Sascha.Manns@@outlook.de?subject=I%20want%20you&amp;body=We%20want%20a%20beast%20like%20you">@_localizer["write-me"]</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About -->
    <section id="about" class="section pp-scrollable d-flex align-items-center position-absolute">
        <div class="intro">

            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <h3 class="text-uppercase">@_localizer["about-name"] <span class="text-primary">Sascha Manns.</span> @_localizer["about-jobs"] @age @_localizer["about-year"] <br /> <span id="replaceJobs"></span></h3>
                        <div class="mt-5 pt-2">
                            <p>@_localizer["about-program"]</p>
                            <div class="mt-5 experience d-flex align-items-center">
                                <div class="experience-number v2"><span class="position-relative">@experience</span></div><div class="text-dark mt-3 ml-4">@_localizer["about-year1"]<br> @_localizer["about-experience"]</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 offset-lg-2 offset-md-1 mt-4">
                        <h6>.NET Framework/C#/Visual Basic.NET/Windows Forms</h6>
                        <div class="progress mb-5">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <h6 class="pt-2">.NET Core/MVC/EF/WPF</h6>
                        <div class="progress mb-5">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h6 class="pt-2">HTML5/JS/CSS/Node.js</h6>
                        <div class="progress mb-5">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <h6 class="pt-2">MS-SQL/MySQL</h6>
                        <div class="progress mb-5">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h6 class="pt-2">Intersystems Cachè/M-Code</h6>
                        <div class="progress mb-5">
                            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 offset-lg-2 offset-md-1 mt-4">
                        <p>@_localizer["about-other-skills"] SOAP, REST, JSON, XML, Wordpress, SCRUM, Git, Linux, Windows, Joomla, Apache httpd/Tomcat, BPMN, UML, DocBook/XSL-FO, ITIL/SLA</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

