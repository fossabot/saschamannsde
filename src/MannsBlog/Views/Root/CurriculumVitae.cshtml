    <!-- Experience -->
    <section id="experience-jobs" class="section pp-scrollable d-flex align-items-center position-absolute">
        <div class="intro">
            <div class="container">
                <h2><span class="text-primary">@_localizer["experience-header"]</span></h2>
                <div class="mt-5 pt-5">
                    @foreach (var job in _jobs.Get())
                    {
                        <div class="row-experience row justify-content-between">
                            <div class="col-md-4">
                                <div class="h6 my-0 text-gray">@job.Years</div>
                                <h5 class="mt-2 text-primary text-uppercase">@job.Company</h5>
                            </div>
                            <div class="col-md-4">
                                <h5 class="mb-3 mt-0 text-uppercase">@job.Jobtitle</h5>
                            </div>
                            <div class="col-md-4">
                                <p>@job.Tasks</p>
                                <p>Stack: <i>@job.Stack</i></p>
                                @if (!string.IsNullOrWhiteSpace(job.Link))
                                {
                                    <a target="_blank" href="@job.Link" class="btn btn-ex-test">@_localizer["experience-cert-employment"]</a>
                                }
                            </div>
                        </div>
                    }
                    <a target="_blank" href="~/downloads/curriculum_vitae.pdf" class="btn btn-ex-test">@_localizer["experience-downloadcv"]</a>
                </div>
            </div>
        </div>
    </section>

    <section id="experience-certs" class="section pp-scrollable d-flex align-items-center position-absolute">
        <div class="intro">
            <div class="container">
                <h2><span class="text-primary">@_localizer["experience-header1"]</span></h2>
                <div class="mt-5 pt-5">
                    @foreach (var cert in _certs.Get())
                    {
                        <div class="row-experience row justify-content-between">
                            <div class="col-md-4">
                                <div class="h6 my-0 text-gray">@cert.Years</div>
                                <h5 class="mt-2 text-primary text-uppercase">@cert.Provider</h5>
                            </div>
                            <div class="col-md-4">
                                <h5 class="mb-3 mt-0 text-uppercase">@cert.Certtitle</h5>
                            </div>
                            <div class="col-md-4">
                                <p>@_localizer["experience-content"]: <i>@cert.Content</i></p>
                                @if (!string.IsNullOrWhiteSpace(cert.Link))
                                {
                                    <a target="_blank" href="@cert.Link" class="btn btn-ex-test">@_localizer["experience-certs"]</a>
                                }
                            </div>
                        </div>
                    }
                    <a target="_blank" href="~/downloads/curriculum_vitae.pdf" class="btn btn-ex-test">@_localizer["experience-downloadcv"]</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section id="services" class="navbar-is-white section pp-scrollable d-flex align-items-center position-absolute bg-dark">
        <div class="intro">
            <div class="container">
                <h2 class="text-white"><span class="text-primary">@_localizer["services-my"]</span> @_localizer["services-specialization"].</h2>
                <div class="mt-5 pt-5">
                    <div class="row">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <ion-icon class="text-white" name="phone-portrait-outline"></ion-icon>
                            <h6 class="text-white">@_localizer["services-app"]</h6>
                            <p>@_localizer["services-app-blurp"]</p>
                        </div>
                        <div class="col-md-4 mb-4 mb-md-0">
                            <ion-icon class="text-white" name="earth-outline"></ion-icon>
                            <h6 class="text-white">@_localizer["services-web"]</h6>
                            <p>@_localizer["services-web-blurp"]</p>
                        </div>
                        <div class="col-md-4">
                            <ion-icon class="text-white" name="construct-outline"></ion-icon>
                            <h6 class="text-white">@_localizer["services-architect"]</h6>
                            <p>@_localizer["services-architect-blurp"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects -->
    <section id="projects" class="section pp-scrollable d-flex align-items-center position-absolute bg-light">
        <div class="intro">
            <div class="container">
                <h2><span class="text-primary">@_localizer["last"]</span> @_localizer["projects"].</h2>
                <div class="mt-5 pt-4">
                    <div class="carousel-project owl-carousel">
                        @foreach (var proj in _projects.Get())
                        {
                            <div class="project-item">
                                <a href="@proj.ProjectHref" class="popup-with-zoom-anim">
                                    <figure class="position-relative">
                                        <!-- 1140x641-->
                                        <img alt="" class="@proj.Width" src="@proj.Portfoliolink">
                                        <figcaption class="text-white">
                                            <h3 class="mb-2 text-white"><a href="@proj.ProjectLink">@proj.Projectname</a></h3>
                                        </figcaption>
                                    </figure>
                                </a>
                                <p>@proj.Goal</p>
                            </div>
                        }
                    </div>
                </div>
                <!--<h1>Github Calendar</h1>
                <div class="calendar">-->
                <!-- Loading stuff -->
                <!--Loading the data just for you.
                </div>-->
            </div>
        </div>
    </section>

