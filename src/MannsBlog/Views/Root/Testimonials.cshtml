@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewBag.Title = _localizer["viewbag-title"];
    ViewBag.PageName = _localizer["viewbag-pagename"];
    ViewBag.PageBlurb = _localizer["viewbag-pageblurp"];
    ViewBag.PageImage = "/img/headers/customer-testimonials-hero.jpg";
}
@inject IConfiguration _config
@inject MannsBlog.Services.DataProviders.TestimonialsProvider _tests
@section styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/owl.carousel/dist/assets/owl.carousel.min.css" />
        <link rel="stylesheet" href="~/lib/owl.carousel/dist/assets/owl.theme.default.css" />
        <link rel="stylesheet" href="~/css/Testimonials.css" />
    </environment>
    <environment names="Production,Staging">
        <link rel="stylesheet" href="~/lib/owl.carousel/dist/assets/owl.carousel.css" />
        <link rel="stylesheet" href="~/lib/owl.carousel/dist/assets/owl.theme.css" />
        <link rel="stylesheet" href="~/css/Testimonials.css" />
    </environment>
}
@section scripts {
    <environment names="Development">
        <script src="~/lib/owl.carousel/dist/owl.carousel.js"></script>
        <script src="~/js/Testimonials.js"></script>
    </environment>
    <environment names="Production,Staging">
        <script src="~/lib/owl.carousel/dist/owl.carousel.min.js"></script>
        <script src="~/js/Testimonials.js"></script>
    </environment>

}

<h1>@_localizer["viewbag-pagename"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div id="testimonial-slider" class="carousel-project owl-carousel">
                @foreach (var testimonial in _tests.Get())
                {
                    <div class="testimonial">
                        <div class="pic">
                            <img src="@testimonial.ImagePath" alt="">
                        </div>
                        <p class="description">
                            @testimonial.Blurp
                        </p>
                        <h3 class="title">
                            @testimonial.Recommender
                            <span class="post"> - @testimonial.RecommenderJob, @testimonial.RecommenderLocation</span>
                        </h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>