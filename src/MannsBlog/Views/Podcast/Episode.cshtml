@model  MannsBlog.Services.DataProviders.PodcastEpisode
@{
  ViewBag.Title = $"Hello World Podcast: Episode {Model.EpisodeNumber} - {Model.GuestName}";
  ViewBag.PageName = $"Hello World Podcast";
  ViewBag.PageImage = "/img/headers/podcast.jpg";


}
@section Styles {
  <link href="~/3rdparty/css/audioplayer.css" rel="stylesheet" />
}
@section Scripts {
  <script src="~/3rdparty/js/audioplayer.min.js"></script>

}
<h3>Episode #@Model.EpisodeNumber: @Model.GuestName</h3>
<p><i class="fas fa-calendar"></i> @Model.PublishedDate.ToString("D")</p>
<partial name="_Episode", model="Model" />
<hr />
<a asp-controller="Podcast" asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> All Episodes</a>
