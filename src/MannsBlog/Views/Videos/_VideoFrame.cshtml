@model MannsBlog.Services.DataProviders.Video
  <div class="embed-responsive">
    @if (Model.VideoType == MannsBlog.Services.DataProviders.VideoType.YouTube)
    {
      <iframe data-src="https://www.youtube.com/embed/@(Model.VideoCode)?rel=0" frameborder="0" allowfullscreen></iframe>
    }
    else if (Model.VideoType == MannsBlog.Services.DataProviders.VideoType.Vimeo)
    {
      <iframe data-src="https://player.vimeo.com/video/@(Model.VideoCode)" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    }
    else if (Model.VideoType == MannsBlog.Services.DataProviders.VideoType.Channel9)
    {
      <iframe data-src="https://channel9.msdn.com/@(Model.VideoCode)/player" allowFullScreen frameBorder="0"></iframe>
    }
  </div>